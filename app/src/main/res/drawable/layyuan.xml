<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#f6f6f6" />
            <corners android:radius="0dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#2fdfa1"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#2fdfa1"
                android:startColor="#2fdfa1"
                android:type="linear" />


            <!-- 应该是圆角 -->
            <corners android:bottomLeftRadius="35dp" android:bottomRightRadius="35dp"/>
        </shape>
    </item>


</layer-list>
